# DEWA AI Support - Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
# Generate secure secrets using: node scripts/generateSecrets.js
JWT_SECRET=dewa-hackathon-secret-key-2026
JWT_REFRESH_SECRET=dewa-hackathon-refresh-secret-2026

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Email Configuration (for MFA)
# For Gmail:
EMAIL_USER=noreply@dewa.gov.ae
EMAIL_PASSWORD=your-app-specific-password

# For SendGrid:
# SENDGRID_API_KEY=your-sendgrid-api-key

# For AWS SES:
# AWS_SES_ACCESS_KEY=your-aws-access-key
# AWS_SES_SECRET_KEY=your-aws-secret-key
# AWS_SES_REGION=us-east-1

# For development/testing, OTP codes will print to console
# Set NODE_ENV=production to enable real email sending

# Database Configuration (if using PostgreSQL/MongoDB)
# DATABASE_URL=postgresql://user:password@localhost:5432/dewa_ai
# MONGO_URI=mongodb://localhost:27017/dewa_ai

# Redis Configuration (for OTP storage in production)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# MFA Configuration
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=3
OTP_RATE_LIMIT_WINDOW=15
OTP_MAX_REQUESTS=5
